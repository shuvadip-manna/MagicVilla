@model IEnumerable<MagicVilla_Web.Models.DTO.VillaDTO>
<br/>
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" action="CreateVilla" class="btn btn-outline-primary"><i class="bi bi-plus-circle-fill"></i>&nbsp; Create Villa</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Occupnacy
                </th>
                <th>
                    Price
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Occupancy
                    </td>
                    <td>
                        @item.Rate.ToString("c")
                    </td>
                    <td>
                        <a asp-controller="Villa" action="UpdateVilla" class="btn btn-outline-success"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Villa" action="DeleteVilla" class="btn btn-outline-danger"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>